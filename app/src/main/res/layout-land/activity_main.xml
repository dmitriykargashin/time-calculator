    <Button
            android:text="@string/button_multiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonMultiply"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:textSize="@dimen/buttons_operators_size"
            android:textColor="@android:color/holo_blue_dark"
            android:fontFamily="@font/googlesans_regular"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintTop_toBottomOf="@+id/buttonDivide"
            app:layout_constraintBottom_toTopOf="@+id/buttonSubstraction"
            android:minHeight="25dp" android:minWidth="50dp"
            app:layout_constraintStart_toStartOf="@+id/buttonSubstraction"
            android:includeFontPadding="false"/>


    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonNum1"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:textSize="@dimen/buttons_num_size"
            android:textColor="@android:color/black"
            android:fontFamily="@font/googlesans_regular"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toTopOf="@+id/buttonNum0" app:layout_constraintStart_toStartOf="@+id/buttonNum0"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="@+id/buttonNum0" android:minHeight="35dp"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonNum2"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:textSize="@dimen/buttons_num_size"
            android:textColor="@android:color/black"
            android:fontFamily="@font/googlesans_regular"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/buttonComma"
            app:layout_constraintStart_toStartOf="@+id/buttonComma"
            app:layout_constraintEnd_toEndOf="@+id/buttonComma" android:minHeight="35dp"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonNum3"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:textSize="@dimen/buttons_num_size"
            android:textColor="@android:color/black"
            android:fontFamily="@font/googlesans_regular"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/buttonEqual"
            app:layout_constraintStart_toStartOf="@+id/buttonEqual"
            app:layout_constraintEnd_toEndOf="@+id/buttonEqual" android:minHeight="35dp"/>
    <Button
            android:text="@string/button_substraction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonSubstraction"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:textSize="@dimen/buttons_operators_size"
            android:textColor="@android:color/holo_blue_dark"
            android:fontFamily="@font/googlesans_regular"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintTop_toBottomOf="@+id/buttonMultiply"
            android:minHeight="25dp" android:minWidth="50dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonAddition"
            app:layout_constraintStart_toStartOf="@+id/buttonAddition" android:includeFontPadding="false"
    />


    <Button
            android:text="."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonComma"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:textColor="@android:color/black" android:textSize="@dimen/buttons_num_size"
            android:fontFamily="@font/googlesans_regular"
            android:background="?selectableItemBackgroundBorderless"
            android:minHeight="35dp"
            app:layout_constraintStart_toEndOf="@+id/buttonNum0" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/buttonEqual" android:layout_marginBottom="@dimen/margin_8_size"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonNum0"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:textSize="@dimen/buttons_num_size"
            android:textColor="@android:color/black"
            android:fontFamily="@font/googlesans_regular"
            android:background="?selectableItemBackgroundBorderless"
            android:minHeight="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/buttonComma"
            android:layout_marginBottom="@dimen/margin_8_size" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"/>
    <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonEqual"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:textSize="@dimen/buttons_num_size"
            android:textColor="@android:color/black"
            android:fontFamily="@font/googlesans_regular"
            android:background="?selectableItemBackgroundBorderless"
            android:minHeight="35dp"
            app:layout_constraintStart_toEndOf="@+id/buttonComma" app:layout_constraintHorizontal_bias="0.5"
