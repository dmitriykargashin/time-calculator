            android:layout_height="wrap_content" android:id="@+id/buttonHour"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:textColor="@color/colorNums" android:textSize="@dimen/buttons_time_size"
            android:textAllCaps="false"
            android:fontFamily="@font/googlesans_regular"
            android:background="?selectableItemBackgroundBorderless"
            android:minHeight="35dp"
            app:layout_constraintEnd_toEndOf="@+id/buttonSecond"
            app:layout_constraintStart_toStartOf="@+id/buttonSecond"
            app:layout_constraintBottom_toTopOf="@+id/buttonSecond"/>
    <Button
            android:text="Minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonMinute"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:textColor="@color/colorNums" android:textSize="@dimen/buttons_time_size"
