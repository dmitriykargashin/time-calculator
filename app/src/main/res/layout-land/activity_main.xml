            android:fontFamily="@font/googlesans_regular"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="@+id/buttonWeek" app:layout_constraintStart_toStartOf="@+id/buttonWeek"
            android:minHeight="35dp" app:layout_constraintBaseline_toBaselineOf="@+id/buttonNum9"/>
    <Button
            android:text="Month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonMonth"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:textColor="@color/colorNums" android:textSize="@dimen/buttons_time_size"
            android:textAllCaps="false"
