            android:textSize="@dimen/buttons_num_size"
            android:textColor="@android:color/black"
            android:fontFamily="@font/googlesans_regular"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/buttonNum6"
            app:layout_constraintStart_toStartOf="@+id/buttonNum6" app:layout_constraintEnd_toEndOf="@+id/buttonNum6"
