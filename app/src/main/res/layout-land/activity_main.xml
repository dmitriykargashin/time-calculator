            android:layout_height="0dp" android:id="@+id/buttonDelete"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:textColor="@android:color/black" android:textSize="@dimen/buttons_operators_size"
            android:fontFamily="@font/googlesans_regular"
            android:background="?selectableItemBackgroundBorderless" android:src="@drawable/ic_backspace_black_24dp"

