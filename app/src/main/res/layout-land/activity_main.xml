            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonAddition"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:textSize="@dimen/buttons_operators_size"
            android:textColor="@android:color/holo_blue_dark"
            android:fontFamily="@font/googlesans_regular"
            android:background="?selectableItemBackgroundBorderless"
            android:minHeight="25dp" android:minWidth="50dp"
            app:layout_constraintStart_toEndOf="@+id/buttonMsec"
            android:layout_marginBottom="@dimen/margin_8_size"
