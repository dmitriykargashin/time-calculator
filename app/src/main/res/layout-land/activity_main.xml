            android:paddingLeft="@dimen/margin_16_size"
            android:textColor="@android:color/black"
            android:fontFamily="@font/googlesans_regular"
            android:background="@android:color/white" android:textStyle="bold"
            android:paddingEnd="@dimen/margin_16_size"
            android:singleLine="false"
            app:layout_constraintBottom_toTopOf="@+id/tvSpaceWithShadowOnly" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textIsSelectable="true" android:ellipsize="none"
            android:enabled="true" android:clickable="false" android:cursorVisible="true"
            app:autoSizeMaxTextSize="@dimen/result_output_maxtextsize"
            app:autoSizeMinTextSize="@dimen/result_output_mintextsize"
            app:autoSizeStepGranularity="1sp" app:autoSizeTextType="uniform"
