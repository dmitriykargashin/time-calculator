            app:layout_constraintEnd_toEndOf="@+id/buttonNum4" android:minHeight="35dp"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonNum8"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:textSize="@dimen/buttons_num_size"
            android:textColor="@android:color/black"
            android:fontFamily="@font/googlesans_regular"
