            android:textSize="@dimen/buttons_num_size"
            android:textColor="@android:color/black"
            android:fontFamily="@font/googlesans_regular"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintStart_toStartOf="@+id/buttonNum1"
            app:layout_constraintBottom_toTopOf="@+id/buttonNum1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="@+id/buttonNum1" android:minHeight="35dp"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonNum5"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:textSize="@dimen/buttons_num_size"
            android:textColor="@android:color/black"
            android:fontFamily="@font/googlesans_regular"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/buttonNum2"
