            app:layout_constraintTop_toBottomOf="@+id/buttonSubstraction"


            android:includeFontPadding="false"
            app:layout_constraintEnd_toStartOf="@+id/buttonDelete"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/tvExpressionField"
            android:fontFamily="@font/googlesans_regular" android:textSize="@dimen/result_expression_maxtextsize"
            android:gravity="bottom|right"
            android:textColor="#272727" android:background="@android:color/white"
            android:paddingEnd="@dimen/margin_16_size" android:paddingLeft="@dimen/margin_16_size"
            android:paddingTop="@dimen/margin_8_size"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="@dimen/result_expression_maxtextsize" app:autoSizeStepGranularity="2sp"
            android:ellipsize="marquee"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:scrollbars="vertical"
            android:enabled="true"
            android:scrollbarStyle="outsideInset" android:layout_gravity="fill"
            android:textIsSelectable="true"
            android:paddingRight="@dimen/margin_16_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/buttonFormats2"
            app:autoSizeMinTextSize="@dimen/result_expression_mintextsize"
            android:minHeight="@dimen/result_expression_mintextsize" app:layout_constraintVertical_bias="0.0"/>


