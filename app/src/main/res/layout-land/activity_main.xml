            android:text="Second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonSecond"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:textColor="@color/colorNums" android:textSize="@dimen/buttons_time_size"
            android:textAllCaps="false"
            android:fontFamily="@font/googlesans_regular"
            android:background="?selectableItemBackgroundBorderless"
            android:minHeight="35dp"
            app:layout_constraintStart_toEndOf="@+id/buttonEqual"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/buttonMsec"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonEqual"/>
    <Button
            android:text="Msec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonMsec"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:textColor="@color/colorNums" android:textSize="@dimen/buttons_time_size"
            android:textAllCaps="false"
            android:fontFamily="@font/googlesans_regular"
            android:background="?selectableItemBackgroundBorderless"
            android:minHeight="35dp"
            app:layout_constraintStart_toEndOf="@+id/buttonSecond"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/buttonAddition"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonSecond"/>


    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonNum7"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:textSize="@dimen/buttons_num_size"
            android:textColor="@android:color/black"
            android:fontFamily="@font/googlesans_regular"
