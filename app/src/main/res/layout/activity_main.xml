            android:textSize="36sp"
            android:textColor="@android:color/black" android:paddingLeft="0dp" android:paddingRight="0dp"
            android:padding="0dp" android:fontFamily="@font/googlesans_regular"
            android:textAllCaps="false"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toTopOf="@+id/buttonNum3"
            app:layout_constraintStart_toEndOf="@+id/buttonNum5"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@id/guideline2"/>
    <Button
