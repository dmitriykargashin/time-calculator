            android:paddingLeft="0dp" android:paddingRight="0dp" android:padding="0dp"
            android:fontFamily="@font/googlesans_regular"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintStart_toEndOf="@+id/buttonNum0"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/buttonEqual"/>
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonNum0"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:textSize="36sp"
            android:textColor="@android:color/black" android:paddingLeft="0dp" android:paddingRight="0dp"
            android:padding="0dp" android:fontFamily="@font/googlesans_regular"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/buttonComma"/>
    <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonEqual"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:textSize="36sp"
            android:textColor="@android:color/black" android:paddingLeft="0dp" android:paddingRight="0dp"
            android:padding="0dp" android:fontFamily="@font/googlesans_regular"
