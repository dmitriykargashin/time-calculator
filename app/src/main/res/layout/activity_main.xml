            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="22dp"/>
    <Button
            android:text="ANY"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:id="@+id/buttonFormats"
            android:background="?selectableItemBackgroundBorderless"
            android:textSize="16sp" android:capitalize="none"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:textColor="@android:color/holo_blue_dark"
            android:textAllCaps="true" android:fontFamily="@font/googlesans_regular"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tvExpressionField" android:textStyle="bold"
            android:gravity="start"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
