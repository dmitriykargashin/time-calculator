            android:paddingEnd="10dp" android:paddingLeft="10dp" android:paddingTop="0dp"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:fadingEdgeLength="12dp" app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="30sp" app:autoSizeMaxTextSize="64sp" app:autoSizeStepGranularity="2sp"
            android:ellipsize="marquee"
