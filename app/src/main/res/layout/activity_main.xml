            android:paddingLeft="0dp" android:paddingRight="0dp" android:padding="0dp"
            android:textColor="@android:color/holo_blue_dark"
            android:fontFamily="@font/googlesans_regular"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toTopOf="@+id/buttonSubstraction"
            android:layout_marginEnd="22dp" app:layout_constraintEnd_toEndOf="parent"/>


    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="59dp" android:id="@+id/buttonNum1"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:textSize="36sp"
            android:textColor="@android:color/black" android:paddingLeft="0dp" android:paddingRight="0dp"
            android:padding="0dp" android:fontFamily="@font/googlesans_regular"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toTopOf="@+id/buttonNum0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/buttonNum2"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="59dp" android:id="@+id/buttonNum2"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:textSize="36sp"
            android:textColor="@android:color/black" android:paddingLeft="0dp" android:paddingRight="0dp"
            android:padding="0dp" android:fontFamily="@font/googlesans_regular"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toTopOf="@+id/buttonComma"
            app:layout_constraintStart_toEndOf="@+id/buttonNum1"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/buttonNum3"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="59dp" android:id="@+id/buttonNum3"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:textSize="36sp"
            android:textColor="@android:color/black" android:paddingLeft="0dp" android:paddingRight="0dp"
            android:padding="0dp" android:fontFamily="@font/googlesans_regular"
            android:background="?selectableItemBackgroundBorderless"
