            android:layout_width="wrap_content"
            android:layout_height="58dp" android:id="@+id/buttonMsec"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:textColor="@color/colorNums" android:textSize="18sp"
            android:textAllCaps="false" android:paddingLeft="0dp" android:paddingRight="0dp"
            android:padding="0dp" android:fontFamily="@font/googlesans_regular"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintTop_toBottomOf="@+id/buttonDay" app:layout_constraintStart_toEndOf="@+id/buttonSecond"
