            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@id/guideline2"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="45sp" android:id="@+id/buttonAddition"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:textSize="30sp"
            android:paddingLeft="0dp" android:paddingRight="0dp" android:padding="0dp"
            android:textColor="@android:color/holo_blue_dark"
            android:fontFamily="@font/googlesans_regular"
            android:background="?selectableItemBackgroundBorderless"
